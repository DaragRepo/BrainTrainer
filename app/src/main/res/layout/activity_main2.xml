<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/timer"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="635dp"
        android:background="@android:color/holo_orange_dark"
        android:text="30"
        android:textColor="@android:color/black"
        android:textFontWeight="bold"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/randomNumbers"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="635dp"
        android:gravity="center"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/counter"
        android:layout_width="72dp"
        android:layout_height="44dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="635dp"
        android:background="@android:color/holo_blue_bright"
        android:text="0/0"
        android:textColor="@android:color/black"
        android:textFontWeight="bold"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/randomNumbers"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="304dp"
        android:layout_height="238dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="341dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="2">


        <Button
            android:id="@+id/firstAnswer"
            android:background="@android:color/holo_red_light"
            android:gravity="fill"
            android:onClick="RightOrWrong"
            android:tag="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textFontWeight="bold"
            android:textSize="30dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


        <Button
            android:id="@+id/secondAnswer"
            android:background="@android:color/holo_purple"
            android:gravity="fill"
            android:onClick="RightOrWrong"
            android:tag="1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textFontWeight="bold"
            android:textSize="30dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/thirdAnswer"
            android:background="@android:color/holo_blue_dark"
            android:gravity="fill"
            android:onClick="RightOrWrong"
            android:tag="2"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textFontWeight="bold"
            android:textSize="30dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


        <Button
            android:id="@+id/fourthAnswer"
            android:background="@android:color/holo_green_dark"
            android:gravity="fill"
            android:onClick="RightOrWrong"
            android:tag="3"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textFontWeight="bold"
            android:textSize="30dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


    </android.support.v7.widget.GridLayout>


    <TextView
        android:id="@+id/answer"
        android:layout_width="132dp"
        android:layout_height="67dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="256dp"
        android:gravity="center"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="514dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="169dp"
        android:gravity="center"
        android:onClick="playAgain"
        android:text="Play Again ?"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>